<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="20dp"
    android:visibility="gone"
    tools:context=".presentation.ui.activities.MainActivity"
    tools:visibility="visible">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_art"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/art_empty" />

    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:maxWidth="350dp"
        android:text="@string/Clique_no_bot_o_para_configurar_o_primeiro_app"
        android:textAlignment="center"
        android:textSize="16sp"
        android:fontFamily="@font/urbanist_extrabold"
        app:layout_constraintEnd_toEndOf="@id/iv_art"
        app:layout_constraintStart_toStartOf="@id/iv_art"
        app:layout_constraintTop_toBottomOf="@id/iv_art" />


</androidx.constraintlayout.widget.ConstraintLayout>